<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"> <!-- MAYBE ADD PADDING -->

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/flag_lang1"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/flag1Desc" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/flag_lang2"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/flag_lang1"
        android:contentDescription="@string/flag1Desc"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flashcardLabel"
        android:layout_toRightOf="@id/flag_lang2"
        android:textSize="20sp"/>

</RelativeLayout>